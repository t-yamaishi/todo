

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th><%= sort_link(@q, :deadline, "Deadline") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <%= search_form_for @q, url: posts_path do |f| %>
      <%= f.text_field :content_cont %>
      締切日:<%= f.date_field :deadline_gteq,
                  include_blank: true %>〜
      <%= f.date_field :deadline_lteq,
                  include_blank: true %>
      <%= f.collection_select :taggings_tag_id_eq, Tag.all, :id, :name, include_blank: true %>
      <%= f.submit "検索" %>
    <% end %>

    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <% if post.deadline %>
          <td><%= l post.deadline  %></td>
        <% else %>
          <td><%= post.deadline %></td>
        <% end %>
        <td class="label">
          <% post.tags.each do |tag| %>
            <%= tag.name %>
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
